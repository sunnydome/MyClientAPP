<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tab文字样式 -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- 可选：自定义Tab指示器样式 -->
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/selected_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/selected_color</item>
        <item name="tabTextColor">@color/default_color</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="BottomNavTextStyle">
        <item name="android:textSize">14sp</item> <!-- 字体大小 -->
        <item name="android:height">200dp</item> <!-- 行高 -->
        <item name="android:textAlignment">center</item> <!-- 文字水平居中 -->

    </style>
</resources>