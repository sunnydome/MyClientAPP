<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
       修改方案：
       1. 只保留一个 Theme.MyApp。
       2. parent 必须改为 Theme.MaterialComponents... 以支持 BottomAppBar。
       3. 选择了 NoActionBar 版本，因为你自己写了顶部/底部导航，不需要系统自带的标题栏。
    -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- ================= 颜色设置 ================= -->
        <!-- 主色调：用于 AppBar, 按钮背景等 -->
        <item name="colorPrimary">@color/selected_color</item>
        <item name="colorPrimaryVariant">@color/selected_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 次色调：FloatingActionButton (FAB) 默认会用这个颜色 -->
        <!-- 如果你想让 FAB 默认是其他颜色，修改这里，或者在布局XML里用 app:backgroundTint 修改 -->
        <item name="colorSecondary">@color/selected_color</item>
        <item name="colorSecondaryVariant">@color/selected_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- ================= 状态栏设置 ================= -->
        <!-- 状态栏背景色 -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- 状态栏文字变黑 (Android 6.0+) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- 优化：为Activity设置透明Window背景，避免双重绘制 -->
        <!-- 设置窗口背景为null或与内容一致的颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 禁用窗口动画预览时的背景 -->
        <item name="android:windowDisablePreview">false</item>
        <!-- 关闭窗口内容叠加层 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- ================= 其他 Material 组件设置 ================= -->
        <!-- 这一行解决某些组件 crash 问题，非必须但推荐 -->
        <!-- <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.Colored</item> -->
    </style>
    <!-- 圆形头像样式 -->
    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- 图片查看器主题 -->
    <style name="Theme.ImageViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 透明背景 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- 禁用默认动画，使用共享元素动画 -->
        <item name="android:windowAnimationStyle">@null</item>

        <!-- 启用 Activity 转场动画 -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- 共享元素动画 -->
        <item name="android:windowSharedElementEnterTransition">@transition/image_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/image_transition</item>

        <!-- 允许内容延伸到系统栏下方 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
