<?xml version="1.0" encoding="utf-8"?>
<!--
评论Item布局 - 优化版
1. 使用 ConstraintLayout 替代多层 LinearLayout 嵌套
2. 分割线改用 ItemDecoration 实现（推荐）或保留在布局中
3. 减少不必要的属性
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- 用户头像 -->
    <ImageView
        android:id="@+id/comment_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/user_avatar_bg"
        android:scaleType="centerCrop"
        android:contentDescription="@string/user_avatar"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 用户名 -->
    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="吃瓜群众"
        app:layout_constraintStart_toEndOf="@id/comment_user_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_user_avatar" />

    <!-- 评论内容 -->
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="3dp"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:text="这也太好看了吧！求详细地址~"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_user_avatar" />

    <!-- 评论时间 -->
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        tools:text="刚刚"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_content" />

    <!-- 可选：点赞按钮区域（如需要可取消注释）
    <ImageView
        android:id="@+id/comment_like_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_like_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_time"
        app:layout_constraintBottom_toBottomOf="@id/comment_time" />

    <TextView
        android:id="@+id/comment_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintEnd_toStartOf="@id/comment_like_button"
        app:layout_constraintTop_toTopOf="@id/comment_like_button"
        app:layout_constraintBottom_toBottomOf="@id/comment_like_button" />
    -->

</androidx.constraintlayout.widget.ConstraintLayout>