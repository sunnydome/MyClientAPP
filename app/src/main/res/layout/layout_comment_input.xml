<?xml version="1.0" encoding="utf-8"?>
<!-- 评论输入区域 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="14dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/post_comment_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.03"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="共0条评论" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_mine_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/user_avatar_bg"
            android:contentDescription="@string/my_avatar"
            tools:src="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/comment_input"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/comment_input_background"
            android:hint="@string/write_comment"
            android:imeOptions="actionSend"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>